<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.geckosolutions.recordrack.custom.FontAwesomeTextView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="@string/calendar"
        android:textColor="@color/wet_asphalt"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>
    <com.geckosolutions.recordrack.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Choose a date when this debt would be due, and Record Rack would remind you."
        android:id="@+id/text"
        android:textSize="18sp"
        android:textColor="@color/battleship_grey"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <CalendarView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:unfocusedMonthDateColor="@color/battleship_grey"
            android:focusedMonthDateColor="@color/turquoise"
            android:id="@+id/calendar"/>

    </LinearLayout>

    <!--<DatePicker
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:id="@+id/date_picker"
        ></DatePicker>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="Done"
            android:id="@+id/done"
            android:clickable="true"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@color/turquoise"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:text="Cancel"
            android:clickable="true"
            android:id="@+id/cancel"
            android:textColor="@color/white"
            android:background="@color/pomegranate"/>
    </LinearLayout>
</LinearLayout>