<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.geckosolutions.recordrack.custom.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Category"
        android:id="@+id/category"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/silver"
        android:layout_marginBottom="10dp"
        android:background="@drawable/turquoise_edittext"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/turquoise_edittext"
        android:id="@+id/item_layout"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="10dp">
        <com.geckosolutions.recordrack.custom.CustomTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColorHint="@color/silver"
            android:textColor="@color/black"
            android:id="@+id/item"
            android:hint="Item"
            android:paddingLeft="10dp"/>
        <com.geckosolutions.recordrack.custom.FontAwesomeTextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/silver"
            android:id="@+id/chevron"
            android:text="@string/chevron_down"
            android:padding="5dp"/>
    </LinearLayout>

    <com.geckosolutions.recordrack.custom.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Quantity"
        android:id="@+id/quantity"
        android:paddingLeft="10dp"
        android:textColorHint="@color/silver"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:background="@drawable/turquoise_edittext"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/turquoise_edittext"
        android:id="@+id/unit_layout"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="10dp">
        <com.geckosolutions.recordrack.custom.CustomTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColorHint="@color/silver"
            android:textColor="@color/black"
            android:id="@+id/unit"
            android:hint="Unit"
            android:paddingLeft="10dp"/>
        <com.geckosolutions.recordrack.custom.FontAwesomeTextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/silver"
            android:id="@+id/chevron2"
            android:text="@string/chevron_down"
            android:padding="5dp"/>
    </LinearLayout>
    <com.geckosolutions.recordrack.custom.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Cost"
        android:textColorHint="@color/silver"
        android:textColor="@color/black"
        android:inputType="numberDecimal"
        android:id="@+id/cost"
        android:paddingLeft="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/turquoise_edittext"/>

</LinearLayout>