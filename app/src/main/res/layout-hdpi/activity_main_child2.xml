<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.geckosolutions.recordrack.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:text="Take your business along with you"
        android:textSize="20sp"
        android:gravity="center"/>

    <com.geckosolutions.recordrack.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/battleship_grey"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="We know you are always on the go, never leave your business behind"
        android:layout_marginBottom="20dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.geckosolutions.recordrack.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Revenue"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.14"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"/>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/pomegranate"/>
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:text="MON"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.14"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"/>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="90dp"
                        android:background="@color/peterriver"/>
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:layout_height="wrap_content"
                        android:text="TUE"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.14"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"/>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="110dp"
                        android:background="@color/orange1"/>
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="WED"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.14"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"/>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="50dp"
                        android:background="@color/emerald"/>
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="THU"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.14"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"/>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="70dp"
                        android:background="@color/battleship_grey"/>
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="FRI"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.14"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"/>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="80dp"
                        android:background="@color/wisteria"/>
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="SAT"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.14"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"/>
                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/wet_asphalt"/>
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="SUN"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:maxHeight="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:src="@drawable/bs_files"/>

</LinearLayout>