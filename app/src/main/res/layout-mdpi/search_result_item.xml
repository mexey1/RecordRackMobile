<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bottom_border"
                android:padding="10dp"
                android:id="@+id/item_layout"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.6"
                    android:orientation="vertical">
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/customer_name"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:text="Customer"/>

                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:id="@+id/transact_id"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:text="Transact ID"
                        android:textColor="@color/battleship_grey"
                        android:gravity="center|left"
                        android:textSize="12sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:orientation="vertical">
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:id="@+id/amount_paid"
                        android:text="Amount paid"/>
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.4"
                        android:textColor="@color/battleship_grey"
                        android:gravity="center_vertical"
                        android:id="@+id/time"
                        android:textSize="12sp"
                        android:text="Time"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:id="@+id/edit"
                android:clickable="true"
                android:background="@color/peterriver">
                <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/edit"
                    android:id="@+id/icon"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Edit"
                    android:id="@+id/edit_text"
                    android:textColor="@color/white"
                    android:gravity="top|center_horizontal"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:id="@+id/print"
                android:clickable="true"
                android:background="@color/turquoise">
                <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/print"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Print"
                    android:textColor="@color/white"
                    android:gravity="top|center_horizontal"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:id="@+id/delete"
                android:clickable="true"
                android:background="@color/pomegranate">
                <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/trash"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Delete"
                    android:textColor="@color/white"
                    android:gravity="top|center_horizontal"/>

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>