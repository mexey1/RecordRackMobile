<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="500dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="3dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/exclamation_triangle"
                android:textColor="@color/orange1"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <com.geckosolutions.recordrack.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="This view allows you edit only the item name. To change other values about this item, please delete this entry and re-enter it"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="#ffffff"
        android:layout_margin="10dp"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.geckosolutions.recordrack.custom.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/turquoise_edittext"
                android:gravity="center"
                android:id="@+id/item_name"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Submit"
                android:id="@+id/submit"
                android:textColor="@color/white"
                android:background="@drawable/blue_round_button"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>