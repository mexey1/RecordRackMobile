<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="5dp"
    android:id="@+id/parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <android.support.design.widget.FloatingActionButton
                    android:clickable="true"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/plus1"
                    android:elevation="4dp"
                    android:visibility="gone"
                    android:id="@+id/add_button"
                    app:rippleColor="@color/silver"
                    app:fabSize="mini"
                    android:layout_marginLeft="5dp"
                    />
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Search for a customer"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:id="@+id/search_layout"
                android:layout_margin="10dp"
                android:padding="3dp"
                android:background="@drawable/search_view_focused">
                <com.geckosolutions.recordrack.custom.FlatUITextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="@string/search"
                    android:id="@+id/user_icon"
                    android:textSize="18sp"
                    android:textColor="@color/battleship_grey"
                    android:gravity="center"/>
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/phone_number_field"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="Enter a phone number"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:id="@+id/add_customer_desc">
            <com.geckosolutions.recordrack.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Didin't find the customer? "
                android:layout_centerInParent="true"
                android:id="@+id/description"
                android:textSize="15sp"
                android:gravity="center"
                android:background="@android:color/transparent"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="Add customer"
                android:id="@+id/add_customer"
                android:textColor="@color/white"
                android:layout_below="@+id/description"
                android:background="@drawable/login_button"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/customer_details"
            >
            <com.geckosolutions.recordrack.custom.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Customer details"
                android:gravity="center"
                />
            <com.geckosolutions.recordrack.custom.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Customer's name"
                android:id="@+id/customer_name"
                android:enabled="true"/>
            <com.geckosolutions.recordrack.custom.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Address"
                android:id="@+id/address"
                android:enabled="true"/>
            <com.geckosolutions.recordrack.custom.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Phone number"
                android:singleLine="true"
                android:id="@+id/phone_number"
                android:enabled="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Done"
                    android:id="@+id/done"
                    android:textColor="@color/white"
                    android:layout_margin="5dp"
                    android:background="@drawable/login_button"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Cancel"
                    android:id="@+id/cancel"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:background="@drawable/pomegranate_round_button"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>