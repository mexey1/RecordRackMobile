<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

   <ListView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:visibility="gone"
       android:layout_above="@+id/add_button"
       android:id="@+id/stock_list">

   </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:id="@+id/empty_stock_layout">
        <com.geckosolutions.recordrack.custom.FontAwesomeTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/empty_stock"
            android:textColor="@color/battleship_grey"
            android:gravity="center"
            android:textSize="50sp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No stocks"
            android:textColor="@color/wet_asphalt"
            android:gravity="center"
            android:textSize="15sp"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Product"
        android:textColor="@color/white"
        android:background="@drawable/login_button"
        android:layout_alignParentBottom="true"
        android:id="@+id/add_button"
        android:layout_margin="16dp"
        />
</RelativeLayout>