<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:fillViewport="true"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bottom_border"
                android:padding="10dp"
                android:id="@+id/item_layout"
                android:orientation="horizontal">
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginRight="5dp"
                    android:id="@+id/unit"
                    android:background="@drawable/turquoise_edittext"
                    android:hint="Unit"/>
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:singleLine="true"
                    android:background="@drawable/turquoise_edittext"
                    android:id="@+id/quantity"
                    android:layout_marginRight="5dp"
                    android:hint="Quantity"/>
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:singleLine="true"
                    android:id="@+id/price"
                    android:background="@drawable/turquoise_edittext"
                    android:hint="Price"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:id="@+id/delete"
                android:clickable="true"
                android:background="@color/pomegranate">
                <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                    android:layout_width="50dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/trash"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:textSize="12sp"
                    android:text="Delete"
                    android:textColor="@color/white"
                    android:gravity="top|center_horizontal"/>

            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>