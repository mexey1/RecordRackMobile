<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <com.geckosolutions.recordrack.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Rice"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/title"/>
    <com.geckosolutions.recordrack.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_margin="5dp"
        android:textColor="@color/wet_asphalt"
        android:textStyle="bold"
        android:text="Saturday, July 29"/>
    <com.geckosolutions.recordrack.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:textColor="@color/wet_asphalt"
        android:textStyle="bold"
        android:text="Revenue"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/container">

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="7dp">
        <com.geckosolutions.recordrack.custom.FontAwesomeTextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/backward"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/backward"
            android:background="@drawable/blue_circular_button"
            android:layout_gravity="left"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.geckosolutions.recordrack.custom.FontAwesomeTextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:background="@drawable/blue_circular_button"
            android:text="@string/forward"
            android:gravity="center"
            android:id="@+id/forward"
            android:layout_gravity="right"/>
    </LinearLayout>
</LinearLayout>