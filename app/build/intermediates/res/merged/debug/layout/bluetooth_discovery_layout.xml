<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/peterriver"
        android:gravity="center">
        <com.geckosolutions.recordrack.custom.FontAwesomeTextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/bluetooth"/>
        <com.geckosolutions.recordrack.custom.CustomTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Bluetooth Devices"
            android:gravity="left|center"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/discovery_progress"
        android:padding="10dp">
        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:indeterminate="true"/>
        <com.geckosolutions.recordrack.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Discovery in progress"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/discovery_complete"
        android:padding="10dp">
        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible"
            android:indeterminate="true"/>
        <com.geckosolutions.recordrack.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Discovery complete"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="#ffffff"
        android:layout_marginTop="10dp"
        app:cardElevation="4dp">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_view"></ListView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        android:layout_marginTop="10dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginRight="5dp"
                android:layout_height="50dp"
                android:text="Scan again"
                android:textColor="@color/white"
                android:id="@+id/scan"
                android:background="@drawable/login_button"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="50dp"
                android:text="Close"
                android:textColor="@color/white"
                android:id="@+id/close"
                android:background="@drawable/pomegranate_round_button"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>