<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:tileMode="repeat" >

    <ImageView
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:src="@drawable/shop"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"/>

    <com.geckosolutions.recordrack.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/business_details"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:padding="5dp"/>

    <ScrollView
        android:id="@+id/new_user_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:id="@+id/business_name"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/username"
                    android:ems="10"
                    android:hint="@string/business_name_hint"
                    android:textColorHint="@color/battleship_grey"
                    android:textColor="@color/black"
                    android:inputType="text" >
                    <requestFocus />
                </com.geckosolutions.recordrack.custom.CustomEditText>

                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:id="@+id/business_address"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:background="@drawable/username"
                    android:ems="10"
                    android:hint="@string/business_address_hint"
                    android:textColorHint="@color/battleship_grey"
                    android:textColor="@color/black"
                    android:inputType="text" >
                </com.geckosolutions.recordrack.custom.CustomEditText>

                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:id="@+id/business_type"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:textColorHint="@color/battleship_grey"
                    android:textColor="@color/black"
                    android:background="@drawable/username"
                    android:hint="@string/business_type_hint"
                    android:inputType="text" >
                </com.geckosolutions.recordrack.custom.CustomEditText>

                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:id="@+id/est_year"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:textColorHint="@color/battleship_grey"
                    android:textColor="@color/black"
                    android:hint="@string/est_year_hint"
                    android:background="@drawable/username"
                    android:inputType="number" >
                </com.geckosolutions.recordrack.custom.CustomEditText>

                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:id="@+id/phone_number"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="10dp"
                    android:textColorHint="@color/battleship_grey"
                    android:textColor="@color/black"
                    android:background="@drawable/username"
                    android:hint="Enter business phone number"
                    android:inputType="phone" >
                </com.geckosolutions.recordrack.custom.CustomEditText>

            </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/new_user_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/blue_round_button"
        android:onClick="onContinueClick"
        android:text="@string/continue_button"
        android:textColor="@color/white" />

</LinearLayout>