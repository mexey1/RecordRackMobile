<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:fillViewport="true"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bottom_border"
                android:padding="5dp"
                android:id="@+id/debtor_layout"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:id="@+id/debtor"
                        android:text="Debtor"/>
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:textSize="15sp"
                        android:id="@+id/due_date"
                        android:textColor="@color/black"
                        android:text="Due date"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/battleship_grey"
                        android:text="Amount due"/>
                    <com.geckosolutions.recordrack.custom.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"

                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/debt"
                        android:text="Debt"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:id="@+id/view"
                android:clickable="true"
                android:background="@color/peterriver">
                <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/view"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="View"
                    android:textColor="@color/white"
                    android:gravity="top|center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:id="@+id/pay"
                android:clickable="true"
                android:background="@color/silver">
                <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/cash"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Pay"
                    android:textColor="@color/white"
                    android:gravity="top|center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:id="@+id/delete"
                android:clickable="true"
                android:background="@color/pomegranate">
                <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/trash"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Delete"
                    android:textColor="@color/white"
                    android:gravity="top|center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>