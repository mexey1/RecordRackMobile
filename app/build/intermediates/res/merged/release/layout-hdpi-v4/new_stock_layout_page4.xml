<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.geckosolutions.recordrack.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/summary"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/turquoise"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:id="@+id/category"
                    android:textColor="@color/battleship_grey"
                    android:text="Rice"
                    android:gravity="center|left"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:layout_weight="0.5"/>
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/item"
                    android:text="Dallas"
                    android:textSize="15sp"
                    android:gravity="center|left"
                    android:layout_weight="0.5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/quantity_available">
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:text="@string/quantity_available"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/unit_relationships">
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:text="@string/unit_relationships"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:text="Submit"
        android:textColor="@color/white"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/login_button"/>

</LinearLayout>