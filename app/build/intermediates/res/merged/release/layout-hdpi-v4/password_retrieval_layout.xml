<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.geckosolutions.recordrack.custom.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Password retrieval"
        android:textSize="20sp"
        android:gravity="center"
        android:background="@color/turquoise"
        android:textColor="@color/white"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_margin="5dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp">
            <com.geckosolutions.recordrack.custom.CustomEditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:id="@+id/username"
                android:hint="Please enter your username"
                android:background="@drawable/turquoise_edittext"/>
            <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="@string/search"
                android:id="@+id/search"
                android:textColor="@color/battleship_grey"
                android:textSize="18sp"
                android:gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="@drawable/bottom_border"
                android:layout_margin="10dp">
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Security question"
                    android:textColor="@color/battleship_grey"/>
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/security_question"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bottom_border"
                android:layout_margin="10dp">
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Your answer"
                    android:textColor="@color/battleship_grey"/>
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:hint="Type answer to security question"
                    android:background="@drawable/turquoise_edittext"
                    android:id="@+id/answer"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@drawable/blue_round_button"
                android:text="Retrieve password"
                android:id="@+id/retrieve_pass"
                android:textColor="@color/white"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>