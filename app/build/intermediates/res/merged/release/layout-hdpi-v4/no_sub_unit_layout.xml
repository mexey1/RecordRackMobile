<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="3dp"
        android:id="@+id/card"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product quantity &amp; price"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:gravity="center|left"/>
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/battleship_grey"
                    android:gravity="center|left"
                    android:layout_marginBottom="10dp"
                    android:text="How much of this item do you have? How much would they be sold for..."/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/card"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="3dp"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/turquoise_edittext"
                    android:textColorHint="@color/battleship_grey"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:id="@+id/unit"
                    android:hint="Unit"/>
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:layout_width="match_parent"
                    android:background="@drawable/turquoise_edittext"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/battleship_grey"
                    android:textColor="@color/black"
                    android:id="@+id/quantity"
                    android:layout_margin="10dp"
                    android:hint="Quantity"/>
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:layout_width="match_parent"
                    android:background="@drawable/turquoise_edittext"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColorHint="@color/battleship_grey"
                    android:textColor="@color/black"
                    android:id="@+id/price"
                    android:layout_margin="10dp"
                    android:hint="Price"/>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:id="@+id/done"
                    android:background="@drawable/login_button"
                    android:text="Done"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>