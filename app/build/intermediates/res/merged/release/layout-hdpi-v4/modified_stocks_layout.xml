<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.geckosolutions.recordrack.custom.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:id="@+id/category"
                android:background="@drawable/turquoise_edittext"
                android:hint="Category"/>
            <com.geckosolutions.recordrack.custom.CustomEditText
                android:layout_width="match_parent"
                android:background="@drawable/turquoise_edittext"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:id="@+id/item"
                android:layout_margin="10dp"
                android:hint="Item"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:clickable="true"
                android:background="@drawable/turquoise_edittext"
                android:orientation="horizontal">
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:id="@+id/unit"
                    android:hint="Base Unit"/>
                <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="@string/question"
                    android:id="@+id/info"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:clickable="true"
                    android:background="@color/battleship_grey"/>
                <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="@string/plus"
                    android:gravity="center"
                    android:clickable="true"
                    android:id="@+id/more_units"
                    android:textColor="@android:color/white"
                    android:background="@drawable/turquoise_right_rounded_edge"/>
                <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="@string/trash"
                    android:gravity="center"
                    android:clickable="true"
                    android:id="@+id/delete"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:background="@color/pomegranate"/>
                <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="@string/view"
                    android:gravity="center"
                    android:clickable="true"
                    android:id="@+id/view"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:background="@drawable/peter_river_right_rounded_edge"/>

            </LinearLayout>
            <com.geckosolutions.recordrack.custom.CustomEditText
                android:layout_width="match_parent"
                android:background="@drawable/turquoise_edittext"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:id="@+id/quantity"
                android:layout_margin="10dp"
                android:hint="Quantity"/>
            <com.geckosolutions.recordrack.custom.CustomEditText
                android:layout_width="match_parent"
                android:background="@drawable/turquoise_edittext"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:id="@+id/price"
                android:layout_margin="10dp"
                android:hint="Price"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_units"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:id="@+id/advanced"
            android:clickable="true"
            android:textColor="@color/baby_blue"/>
        <Button
            android:layout_width="match_parent"
            android:text="Submit"
            android:textColor="@color/white"
            android:id="@+id/submit"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/login_button"/>
    </LinearLayout>
</LinearLayout>