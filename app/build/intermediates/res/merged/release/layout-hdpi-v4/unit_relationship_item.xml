<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:fillViewport="true"
        android:id="@+id/scrollView"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/bottom_border"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:id="@+id/item_layout"
                android:gravity="center"
                android:orientation="horizontal">
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:id="@+id/value"
                    android:background="@drawable/turquoise_edittext"
                    android:layout_weight="0.15"/>
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:background="@drawable/turquoise_edittext"
                    android:id="@+id/unit1"
                    android:textColor="@color/black"
                    android:hint="Unit"/>

                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/battleship_grey"
                    android:text="="/>

                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:layout_weight="0.15"
                    android:gravity="center"
                    android:text="1"/>
                <com.geckosolutions.recordrack.custom.CustomEditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:id="@+id/unit2"
                    android:textColor="@color/black"
                    android:background="@drawable/turquoise_edittext"
                    android:hint="Unit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:id="@+id/delete"
                android:clickable="true"
                android:background="@color/pomegranate">
                <com.geckosolutions.recordrack.custom.FontAwesomeTextView
                    android:layout_width="70dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:text="@string/trash"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"/>
                <com.geckosolutions.recordrack.custom.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:text="Delete"
                    android:textColor="@color/white"
                    android:gravity="top|center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>